@model GasHub.Models.Order

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}



<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title font-weight-bold fs-1 color-primary">Confirmed Order List</h3>
                    </div>
                    <div id="successMessage" class="alert alert-success" role="alert" style="display: none;">
                        <strong>Holy guacamole!</strong>   Your company was successfully saved.
                        <button id="btnClose" type="button" class="btn-close" aria-label="Close"></button>
                    </div>

                    <!-- /.card-header -->

                    <div class="card-body">
                        <table id="CompanyTable" class="table table-bordered table-striped">

                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th> Trans: ID </th>
                                    <th>Order Product</th>
                                    <th>Return Product</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>



<div class="modal  fade " id="modelCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabelAddEmployee" aria-hidden="true">
    <div class="modal-dialog modal-xl ">
        <div class="modal-content w-auto">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabelAddEmployee">Add Order</h4>
                <h4 class="modal-title" style="display:none;" id="myModalLabelUpdateEmployee">Update Order</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="PlasedOrderForm">
                    <input type="hidden" id="IsConfirmed" name="IsConfirmed" />
                    <input type="hidden" id="IsPlaced" name="IsPlaced" />
                    <input type="hidden" id="IsReadyToDispatch" name="IsReadyToDispatch" />
                    <input type="hidden" id="IsDispatched" name="IsDispatched" />
                    <input type="hidden" id="IsDelivered" name="IsDelivered" />
                    <input type="hidden" id="IsCancel" name="IsCancel" />
                    <input type="hidden" id="IsHold" name="IsHold" />

                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="UserId"></label>
                                            <select class="form-control" asp-for="UserId" id="userDropdown">
                                                <option value="">Select User</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ProductId"></label>
                                            <select class="form-control" asp-for="ProductId" id="productDropdown">
                                                <option value="">Select Product</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="TransactionNumber" class="control-label"></label>
                                            <input asp-for="TransactionNumber" placeholder="Enter Your Name" class="form-control" name="TransactionNumber" />
                                            <span asp-validation-for="TransactionNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ReturnProductId"></label>
                                            <select class="form-control" asp-for="ReturnProductId" id="ReturnProductDropdown">
                                                <option value="">Select Return Product</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Comments" class="control-label"></label>
                                            <input asp-for="Comments" placeholder="Enter Your Name" class="form-control" name="Comments" />
                                            <span asp-validation-for="Comments" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @* <div class="col-md-6">
                            <div class="row">
                            <div class="col-md-6">


                            </div>
                            <div class="col-md-6">

                            </div>
                            </div>
                            </div> *@
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>









<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteAndDetailsModel" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Are you sure you want to delete the following Order ?
            </div>

            <div class="modal-body" id="companyDetails">
                <!-- Company details will be populated dynamically by jQuery -->
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnDelete">Delete</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/inventory/order/confirmorder.js" type="module" asp-append-version="true"></script>
}

