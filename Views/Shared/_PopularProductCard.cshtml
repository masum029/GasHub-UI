@model GasHub.Models.Product

@{
    var discountprice = Model.DiscountPrice.HasValue ? Model.ProdPrice - Model.DiscountPrice.Value : Model.ProdPrice;
    var hasDiscount = Model.DiscountPrice.HasValue && Model.DiscountPrice.Value > 0;
    var hasValidate = Model.ValidTill.Date >= DateTime.Now.Date;
}

<div class="col-xl-3 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay=".8s">
    <div class="catagory-product-card-2 text-center">
        <div class="catagory-product-image">
            <img src="@Url.Content("~/images/" + Model.ProdImage)" alt="product-img" style="width: 100%;">
        </div>
        <div class="catagory-product-content">
            <div class="catagory-button">
                <a class="theme-btn-2" order-product-id="@Model.Id">
                    <i class="far fa-shopping-basket"></i>Add To Cart
                </a>
            </div>
            <div class="info-price d-flex align-items-center justify-content-center">
                @if (hasDiscount && hasValidate)
                {
                    <del>Tk:<span>@Model.ProdPrice</span></del>
                    <span class="text-success">Tk:<span>@discountprice</span></span>
                }
                else
                {
                    <span>Tk:<span>@Model.ProdPrice</span></span>
                }
            </div>
            <h4>
                <a href="#">@Model.Name</a>
            </h4>
            <div class="star">
                <span class="fas fa-star"></span>
                <span class="fas fa-star"></span>
                <span class="fas fa-star"></span>
                <span class="fas fa-star"></span>
                <span class="fas fa-star text-white"></span>
            </div>
        </div>
    </div>
</div>
