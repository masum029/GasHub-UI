@model GasHub.Models.Register
@{
    ViewData["Title"] = "Register Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="contact-section section-padding pt-0 section-bg">
    <div class="container">
        <div class="contact-area">
            <div class="row justify-content-center">
                <!-- Changed justify-content-between to justify-content-center -->
                <div class="col-xl-5 col-lg-5 mt-5 mt-lg-0 mx-auto">
                    <!-- Changed ms-auto to mx-auto -->
                    <div class="contact-form-items">
                        <div class="contact-title">
                            <h3 class="wow fadeInUp" data-wow-delay=".3s">Register New User </h3>
                            <p class="wow fadeInUp" data-wow-delay=".5s">Your email address will not be published. Required fields are marked *</p>
                        </div>
                        <form method="post" asp-action="CreateUser" asp-controller="Public">
                            <div class="row g-4">
                                <div class="col-lg-6 wow " data-wow-delay=".3s">

                                    <div class="form-clt">
                                        <input name="FirstName" asp-for="FirstName" placeholder="Enter Your First Name*">
                                        <div class="icon">
                                            <i class="fal fa-user"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 wow fadeInUp" data-wow-delay=".3s">
                                    <div class="form-clt">
                                        <input name="LaststName" asp-for="LaststName" placeholder="Enter Your Last Name*">
                                        <div class="icon">
                                            <i class="fal fa-user"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="LaststName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 wow fadeInUp" data-wow-delay=".5s">
                                    <div class="form-clt">
                                        <input type="text" name="UserName" asp-for="UserName" placeholder="Choose Your Username*" style="text-transform: none;">
                                        <div class="icon">
                                            <i class="fal fa-user"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 wow fadeInUp" data-wow-delay=".5s">
                                    <div class="form-clt">
                                        <input name="PhoneNumber" asp-for="PhoneNumber" placeholder="Enter your phone Number*" style="text-transform: none;">
                                        <div class="icon">
                                            <i class="fal fa-phone"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="col-lg-12 wow fadeInUp" data-wow-delay=".5s">
                                    <div class="form-clt">
                                        <input name="Email" asp-for="Email" placeholder="Enter Your Valid Email*" style="text-transform: none;">
                                        <div class="icon">
                                            <i class="fal fa-envelope"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 wow fadeInUp" data-wow-delay=".5s">
                                    <div class="form-clt">
                                        <input type="password" name="Password" asp-for="Password" placeholder="Enter Your Unique Password*" style="text-transform: none;">
                                        <div class="icon">
                                            <i class="fal fa-lock"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 wow fadeInUp" data-wow-delay=".5s">
                                    <div class="form-clt">
                                        <input type="password" name="ConfirmationPassword" asp-for="ConfirmationPassword" placeholder="Confirm Your Password*" style="text-transform: none;">
                                        <div class="icon">
                                            <i class="fal fa-lock"></i>
                                        </div>
                                    </div>
                                    <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
                                </div>

                                <div class="col-lg-6 wow fadeInUp" data-wow-delay=".8s">
                                    <button type="submit" class="theme-btn" id="btnRegister">
                                        <span class="button-content-wrapper d-flex align-items-center">
                                            <span class="button-icon"><i class="fal fa-user-plus"></i></span>
                                            <span class="button-text">Register</span>
                                        </span>
                                    </button>
                                </div>
                                <div class="col-lg-12 wow fadeInUp" data-wow-delay=".5s">
                                    <p>Already have an account? <a asp-controller="Public" asp-action="Login" class="text-success">Login</a></p>
                                </div>
                            </div>
                        </form>
                        @{
                            await Html.RenderPartialAsync("_ValidationScriptsPartial");
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


